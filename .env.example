# Environment Variables Example
# Copy this file to .env and fill in your values

# Development/Production mode
NODE_ENV=development

# Logging level (error, warn, info, debug)
LOG_LEVEL=info

# Database path (optional - defaults to user data directory)
# DB_PATH=/custom/path/to/database.db

# Output folder (optional - defaults to Documents/StatementConverter)
# OUTPUT_FOLDER=/custom/output/folder

# Enable detailed logging
# DEBUG=true

# Sentry DSN for error tracking (optional)
# SENTRY_DSN=https://your-sentry-dsn

# Auto-update settings (optional)
# AUTO_UPDATE_ENABLED=true
# UPDATE_CHECK_INTERVAL=3600000

# Feature flags (optional)
# FEATURE_CLOUD_SYNC=false
# FEATURE_SCHEDULED_CONVERSIONS=false
# FEATURE_EMAIL_NOTIFICATIONS=false
